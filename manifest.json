{
  "manifest_version": 3,
  "name": "samext",
  "version": "1.0.0",
  "description": "Samser Tab Manager Extension - Manage your tabs easily",
  "author": "franco@samser.co",
  "icons": {
    "128": "images/logo128.png"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "background.min.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "close_all_other_tabs": {
      "suggested_key": {
        "windows": "Ctrl+A",
        "mac": "Command+A",
        "chromeos": "Ctrl+A",
        "linux": "Ctrl+A"
      },
      "description": "Close all tabs except current one"
    },
    "close_duplicated_tabs": {
      "suggested_key": {
        "windows": "Ctrl+K",
        "mac": "Command+K",
        "chromeos": "Ctrl+K",
        "linux": "Ctrl+K"
      },
      "description": "Close all tabs except current one"
    },
    "go_to_next_tab": {
      "suggested_key": {
        "windows": "Alt+N",
        "mac": "Alt+N",
        "chromeos": "Alt+N",
        "linux": "Alt+N"
      },
      "description": "Go to the next tab"
    },
    "go_to_previous_tab": {
      "suggested_key": {
        "windows": "Alt+P",
        "mac": "Alt+P",
        "chromeos": "Alt+P",
        "linux": "Alt+P"
      },
      "description": "Close all tabs except current one"
    }
  }
}
